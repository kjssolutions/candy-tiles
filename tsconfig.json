{
	"compilerOptions": {
		"strict": false,  // Turn off strict type checking
    	"noImplicitAny": false,  // Allow variables with no type annotations to implicitly have an 'any' type
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"checkJs": false,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		// "checkJs": true,
		"typeRoots": [
			"src/types",
			"node_modules/@types"
		],
		"jsx": "react-jsx",
	},
	"include": [
		"src",
		"src/types/**/*",
		"node_modules/@types"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	],
	"rules": {
		"@typescript-eslint/ban-ts-ignore": "off"
	  }
	
}